{%extends "base.html.twig" %}

{% block stylesheets %}
    <link
        rel="stylesheet"
        type="text/css"
        href="{{ asset('assets/css/registration.css')}}">
{% endblock %}
{% block body %}
    <body>

        <div class="inner">
            <div class="image-holder"><img src="{{ asset('assets/images/others/inscription_fond3.png')}}" alt=""></div>
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ message }}</div>
            {% endfor %}

            {{form_start(form)}}

            <h3>Inscription</h3>

            <div class="form-grouped d-flex row" style="color:black;">
                <div class="form-wrapper margin-left-register">
                 <div>Nom
                    </div>
                    <div class="error-form">
                        {{ form_errors(form.nomUser)}}
                    </div>
                    {{ form_widget(form.nomUser, {'attr': {'class': 'input form-control'}}) }}
                </div>
                <div class="form-wrapper margin-left-register">
                    <div>Prénom
                    </div>
                    <div class="error-form">
                        {{ form_errors(form.prenomUser)}}
                    </div>
                    {{ form_widget(form.prenomUser, {'attr': {'class': 'input form-control'}}) }}
                </div>

                <div class="form-wrapper margin-left-register">
                    <div>Mot de Passe
                    </div>
                    <div class="error-form">
                        {{ form_errors(form.password)}}
                    </div>
                    {{ form_widget(form.password, {'attr': {'class': 'input form-control'}}) }}

                </div>
                <div class="form-wrapper margin-left-register">
                    <div>Confirmer Mot de Passe
                    </div>
                    <div class="error-form">
                        {{ form_errors(form.confirm_password)}}
                    </div>
                    {{ form_widget(form.confirm_password, {'attr': {'class': 'input form-control'}}) }}

                </div>
                <div class="form-wrapper margin-left-register">
                    <div>Pseudo
                    </div>
                    <div class="error-form">
                        {{ form_errors(form.username)}}
                    </div>
                    {{ form_widget(form.username, {'attr': {'class': 'input form-control'}}) }}

                </div>
                <div class="form-wrapper margin-left-register">
                    <div>Email
                    </div>
                    <div class="error-form">
                        {{ form_errors(form.emailUser)}}
                    </div>
                    {{ form_widget(form.emailUser, {'attr': {'class': 'input form-control'}}) }}

                </div>
                <div class="form-wrapper margin-left-register">
                    <div>Téléphone
                    </div>
                    <div class="error-form">
                        {{ form_errors(form.telephoneUser)}}
                    </div>
                    {{ form_widget(form.telephoneUser, {'attr': {'class': 'input form-control'}}) }}
                </div>
                <div class="form-wrapper margin-left-register">
                    <div>Adresse
                    </div>
                    {{ form_widget(form.adresseUser, {'attr': {'class': 'input form-control'}}) }}

                </div>

                <button class=" form-wrapper margin-left-register btn btn-primary btn-no-hover" type="submit">Inscription</button>
                {{form_end(form) }}
            </div>
        </div>

    </body>
{% endblock %}